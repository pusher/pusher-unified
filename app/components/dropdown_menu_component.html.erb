<<%= @wrapper_element %> class="<%= @wrapper_classes %> relative dropdown-toggle-wrap">
  <div class="dib">
  <% if @size == 'icon' %>
    <%= render(IconButtonComponent.new(icon_name: 'ellipsis-vertical', icon_title: 'Actions menu')) %>
  <% else %>
    <%= render(ButtonComponent.new(
        color: "snow",
        size:  @size,
        with_icon: true,
        bold: @bold,
        classes: "dropdown-toggle",
        attributes: {
          "aria-controls": @id
        })) do %>
      <%= @label %>
      <% if @show_caret %>
        <%= svg_asset("caret-down", class: "ml2 silver") %>
      <% end %>
    <% end %>
  <% end %>
  </div>
  <div class="dropdown dn pt3 absolute <%= @position_class %> z-1">
    <ul id="<%= @id %>" class="list pa0 ma0 br2 ba b--smoke-light bg-white shadow-2" aria-expanded="false">
      <% @children.each do |child| %>
        <li>
          <a href="<%= child[:href] %>"
             class="db link <%= child[:warning] ? 'radish hover-bg-radish-wash' : 'black hover-bg-snow-light' %> pv2 pl4 pr6"
          >
            <%= child[:label] %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</<%= @wrapper_element %>>
