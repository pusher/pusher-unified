  <div class="sticky top-1">
    <h1 class="mv0 mr5 pl5">
      <a href="/" class="link snow hover-white active-snow-dark focus-white">
        <%= render(IconComponent.new(name: 'pusher-logo', title: 'Pusher', width: 120, classes: 'db')) %>
      </a>
    </h1>
    <nav class="mt6">
      <ul class="list ma0 pa0">
        <li class="f6 mt0 mb5">
          <a href="/" class="link snow hover-white active-snow-dark focus-black flex items-center pl5 relative menu-current-product">
            <%= render(IconComponent.new(name: 'channels-icon', title: 'Channels', size: 32, classes: 'channels mr3 dib')) %>
