</header>
<div class="flex-grow-1">
  <header class="bb b--smoke-light">
    <div class="pt4 ph5 flex items-center justify-between center mw8">
      <h3 class="f6 f5-l flex items-center ma0">
        <%= render(IconComponent.new(name: 'channels-icon', title: 'Channels', size: 40, classes: 'channels mr3')) %>
        Channels
      </h3>

      <%= render(IconButtonComponent.new(icon_name: 'menu', icon_title: 'Show navigation menu', classes: 'menu-toggle dn-l')) %>
      
      <nav class="dn pv4 bg-black br4 relative" id="menu">
        <%= render(IconButtonComponent.new(style: 'dark', icon_name: 'cancel', icon_title: 'Hide navigation menu', classes: 'menu-toggle absolute top-0 right-0 ma2 z-1')) %>
        <ul class="list pa0 ma0">
          <li class="pb5">
            <a href="/" class="w-75 flex items-center relative ph4 link snow hover-white active-snow-dark focus-black f5 fw6 menu-current-product">
              <%= render(IconComponent.new(name: 'channels-icon', title: 'Channels', size: 40, classes: 'channels mr3')) %>
              Channels
            </a>
          </li>
          <li class="pb3 mb5 bb b--slate">
            <a href="/" class="w-75 flex items-center relative ph4 link snow hover-white active-snow-dark focus-black f5 fw6">
              <%= render(IconComponent.new(name: 'beams-icon', title: 'Channels', size: 40, classes: 'beams mr3')) %>
              Beams
            </a>
          </li>
          <li class="pb2 mb2">
            <a href="#" class="dib w-75 ph4 f6 link snow hover-white active-snow-dark focus-black fw6">
              Account settings
            </a>
          </li>
          <li class="pb2 mb2">
            <a href="#" class="dib w-75 ph4 f6 link snow hover-white active-snow-dark focus-black fw6">
            Billing
            </a>
          </li>
          <li class="pb2 mb2">
            <a href="#" class="dib w-75 ph4 f6 link snow hover-white active-snow-dark focus-black fw6">
            Support
            </a>
          </li>
          <li class="pb2 mb2">
            <a href="#" class="dib w-75 ph4 f6 link snow hover-white active-snow-dark focus-black fw6">
            Docs
            </a>
          </li>
          <li class="ph4">
            <%= render(ButtonComponent.new(classes: "w-100")) do %>
              Sign out
            <% end %>
          </li>
        </ul>
      </nav>
      <nav class="dn db-l">
        <ul class="list pa0 ma0">
          <li class="dib ml5">
            <%= render(ButtonComponent.new(style: "outline", size: 'small', bold: false)) do %>
              Feedback
            <% end %>
          </li>
          <li class="dib ml5">
            <a href="#" class="db link black hover-slate">
              Support
            </a>
          </li>
          <li class="dib ml5">
            <a href="#" class="db link black hover-slate">
            Docs
            </a>
          </li>
          <%= render(DropdownMenuComponent.new(
            label: "Account",
            bold: false,
            wrapper_element: "li",
            wrapper_classes: "dib ml5",
            position_class: "right-0",
            children: [
              {
                label: "Account",
                href: "#account"
              },
              {
                label: "Billing",
                href: "#billing"
              },
              {
                label: "Sign out",
                href: "#sign-out"
              }
            ]
          )) %>
        </ul>
      </nav>
    </div>
    <div class="pt4 ph5 overflow-fade mw8 center">
      <div class="flex items-start justify-between mt5">
        <nav class="sit-on-line">
          <ul class="list pa0 ma0 flex">
            <li class="mr5">
              <a href="#" class="db link black hover-slate pb4 bb bw1 b--black hover-b--black nav-active-item">
                Overview
              </a>
            </li>
            <li class="mr5">
              <a href="#" class="db link black hover-slate pb4 bb bw1 b--transparent hover-b--black">
              Apps
              </a>
            </li>
            <li class="mr5">
              <a href="#" class="db link black hover-slate pb4 bb bw1 b--transparent hover-b--black">
              Stats
              </a>
            </li>
            <li class="mr5">
              <a href="#" class="db link black hover-slate pb4 bb bw1 b--transparent hover-b--black">
              Plans
              </a>
            </li>
            <li class="mr5">
              <a href="#" class="db link black hover-slate pb4 bb bw1 b--transparent hover-b--black">
              Settings
              </a>
            </li>
          </ul>
        </nav>
        <%= render(ButtonComponent.new(size: 'small', classes: 'dn db-l')) do %>
          Create app
        <% end %>
      </div>
    </div>
  </header>
  <main class="pv4 ph5 flex items-center flex-wrap justify-between mw8 center">
    <h3 class="mt6 heading-level-2">Overall usage</h3>
    <form class>
      <%= render(SwitchRadioComponent.new(name: 'period',
                  switches: [
                  {label: 'Today', checked: true},
                  {label: 'Live'}])) %>
    </form>

    <div class="w-100 g2x-ns gg2">
      <%= render(UsageLineComponent.new(title: 'Concurrent connections today', usage: 67636, limit: 100000)) %>
      <%= render(UsageLineComponent.new(title: 'Messages sent today', usage: 750636, limit: 5000000)) %>

      <h3 class="mt6 heading-level-2 flex items-center" aria-describedby="tooltip-below">Tooltip below (default)
          <%= render(TooltipComponent.new(id: 'tooltip-below', classes: 'silver', width: 'w5')) do %>
          A long tooltip that needs to be set a litter wider.
        <% end %>
      </h3>
      <h3 class="mt6 heading-level-2 flex items-center" aria-describedby="tooltip-above">Tooltip above
        <%= render(TooltipComponent.new(id: 'tooltip-above', classes: 'silver', position: 'above')) do %>
          This one is shorter
        <% end %>
      </h3>
      <h3 class="mt6 heading-level-2">Tooltip in a switch</h3>
      <div class="mt6">
        <%= render(SwitchRadioComponent.new(name: 'period',
              switches: [
              {label: 'All apps', checked: true},
              {label: 'Owned by me'},
              {label: 'Shared with me', tooltip: "Usage of apps shared with you is billed to the owner of the app, not you", tooltip_width: 'w5'}])) %>
      </div>
    </div>

    <%= render(BoxComponent.new(dashed: true, classes: 'w-100 tc mv5')) do %>
      <span class="dib br-100 bg-starflower-wash pa3 mb4-l">
        <%= render(IconComponent.new(name: 'ghost', size: 24, classes: 'db starflower')) %>
      </span>
      <div class="dn db-l">
        <h3 class="heading-level-2">You donâ€™t have any apps right now</h3>
        <%= render(ButtonComponent.new()) do %>
          Create app
        <% end %>
      </div>
      <div class="dn-l">
        <h3 class="f5 ma0">No apps here</h3>
        <p>Create one on your computer</p>
      </div>
    <% end %>
  </main>
</div>
