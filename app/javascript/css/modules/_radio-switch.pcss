.radio-switch {
  &-label {
    display: inline-block;
    padding: var(--spacing-extra-extra-small) var(--spacing-small);
    margin-left: var(--spacing-extra-small);
    text-align: center;
    font-weight: 600;
    border-style: solid;
    border-width: 1px;
    border-color: var(--snow-light);
    border-radius: var(--border-radius-3);
    cursor: pointer;
  }

  &-label:first-of-type {
    margin-left: 0;
  }

  &:hover + &-label {
    background-color: var(--snow-dark);
    border-color: var(--snow-dark);
  }

  &:focus + &-label {
    background-color: var(--white);
    outline: 2px solid var(--starflower-light);
  }

  &:active + &-label {
    background-color: var(--snow-dark);
  }

  &:checked + &-label {
    background-color: var(--white);
    border-color: var(--white);
    box-shadow: var(--box-shadow-3);
  }
}
