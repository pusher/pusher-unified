.breadcrumbs {
  li {
    position: relative;
    padding-right: var(--spacing-small);
  }

  & > li + li {
    padding-left: var(--spacing-medium);

    &:before {
      position: absolute;
      display: flex;
      align-content: center;
      top: 0;
      left: 0;
      bottom: 0;
      color: var(--silver);
      content: url("data:image/svg+xml;base64,");
    }
  }
}
